<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="available_in_pos" position="after">
                    <field name="alternative_products_id" attrs="{'invisible': [('available_in_pos', '=', False)]}" domain="[('available_in_pos', '=', True)]" widget="many2many_tags"/>
                </field>
            </field>
        </record>
        <template id="assets" inherit_id="point_of_sale.assets">
          <xpath expr="." position="inside">
              <script type="text/javascript" src="/pos_product_varient/static/src/js/pos.js"></script>
              <link rel="stylesheet" href="/pos_product_varient/static/src/css/pos.css" />
          </xpath>
        </template>
    </data>
</odoo>
